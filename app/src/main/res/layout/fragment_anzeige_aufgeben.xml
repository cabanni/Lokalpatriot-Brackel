<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/myProgessbar"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_marginRight="5dp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/anzeige_aufgeben"
            android:textSize="22sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:padding="6dp"
            android:text="@string/kategorie_waehlen" />

        <Spinner
            android:id="@+id/spinnerKategorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            />

        <TextView
            android:id="@+id/label_ueberschrift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerKategorie"
            android:background="@color/colorPrimary"
            android:padding="6dp"
            android:textColor="#fff"

            android:text="@string/label_edit_text_ueberschrift" />

        <EditText
            android:id="@+id/editText_ueberschrift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/label_ueberschrift"
            android:ems="10"
            android:freezesText="true"
            android:gravity="top|left"
            android:inputType="textPersonName"
            android:text="Ãœberschrift"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/label_beschreibung"
            android:textColor="#fff"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_ueberschrift"
            android:text="@string/label_editText_beschreibung" />

        <EditText
            android:textColor="@color/colorPrimary"
            android:id="@+id/editText_beschreibung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/label_beschreibung"
            android:ems="10"
            android:freezesText="true"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:scrollbars="vertical"
            android:text="Text eingeben" />







        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_anzeige_abschicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_beschreibung"
            android:text="abschicken" />

    </RelativeLayout>

</ScrollView>